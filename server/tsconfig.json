{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "lib": ["es5", "es6", "esnext.asynciterable", "es7", "es2017"],
    "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "commonjs"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "lib"]
}